<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFrameworks>net6.0</TargetFrameworks>
    <TargetFramework>net6.0</TargetFramework>
    <Nullable>enable</Nullable>
    
    <RuntimeIdentifiers>osx-arm64; osx-x64; win-x86; win-x64; win-arm; win-arm64; linux-x64; linux-musl-x64; linux-arm; linux-arm64</RuntimeIdentifiers>
    <PublishReadyToRun>true</PublishReadyToRun>
    <PublishSingleFile>true</PublishSingleFile>

    <AssemblyName>BerryCodeGen</AssemblyName>
    <RootNamespace>StrawberryShake.CodeGeneration.CSharp</RootNamespace>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="DotNet.Glob" Version="3.1.2" />
    <PackageReference Include="StreamJsonRpc" Version="2.9.85" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\CodeGeneration.CSharp.Server.Messages\StrawberryShake.CodeGeneration.CSharp.Server.Messages.csproj" />
    <ProjectReference Include="..\CodeGeneration.CSharp\StrawberryShake.CodeGeneration.CSharp.csproj" />
  </ItemGroup>

  <PropertyGroup>
    <AddPublicApiAnalyzers>false</AddPublicApiAnalyzers>
  </PropertyGroup>

</Project>
