<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">

  <ItemDefinitionGroup>
    <GraphQL>
      <Generator>MSBuild:Compile</Generator>
    </GraphQL>
    <GraphQLConfig>
      <Generator>MSBuild:Compile</Generator>
    </GraphQLConfig>
  </ItemDefinitionGroup>

  <ItemGroup>
    <PropertyPageSchema Include="$(GraphQLPropertyPageSchema)">
      <Context>File;BrowseObject</Context>
    </PropertyPageSchema>
    <AvailableItemName Include="GraphQL" />
    <AvailableItemName Include="GraphQLConfig" />
  </ItemGroup>

  <Target Name="RemoveStrawberryShakeSourceGeneratedFiles" BeforeTargets="CoreCompile">
    <ItemGroup>
      <Compile Remove="**/*.StrawberryShake.cs" />
    </ItemGroup>
  </Target>
</Project>
